<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="181dp"
        android:layout_height="106dp"
        android:background="#c88bbeeb"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forecast_date_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="date"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/forecast_wind_item"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/forecast_wind"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_wind_item"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/forecast_wind_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="8dp"
            android:text="wind"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/forecast_pressure_item"
            app:layout_constraintStart_toEndOf="@+id/forecast_wind" />

        <ImageView
            android:id="@+id/forecast_pressure"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_pressure_item"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/forecast_pressure_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="8dp"
            android:text="pressure"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/forecast_humidity_item"
            app:layout_constraintStart_toEndOf="@+id/forecast_pressure" />

        <ImageView
            android:id="@+id/forecast_humidity"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_humidity_item"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/forecast_humidity_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="8dp"
            android:text="humidity"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/forecast_humidity" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#c806122e"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/forecast_temp_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="temp"
            android:textSize="25sp"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_picture_item"
            app:layout_constraintEnd_toStartOf="@+id/forecast_picture_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/forecast_picture_item"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/forecast_description_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/forecast_description_item"
            android:layout_width="124dp"
            android:layout_height="17dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="description"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>



</LinearLayout>